<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("./partials/head") %>
    <title>Document</title>
</head>
<body>
    <%- include("./partials/nav") %>
      <div class="container">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverimageURL %>" alt="" srcset="" width="700px">
        <p><%= blog.body %></p>
      </div>
      <div class="container mt-3">
          <h1>Comment</h1>
            <% if (locals.user) { %>
                <form action="/blog/comments/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input type="text" class="form-control" id="comment" aria-describedby="comment" name="content" placeholder="enter a comment">
                        <button class="btn btn-primary mt-3 " type="submit">Submit</button>
                      </div>
                      <div class="mt-3 ">
                        <% comments.forEach(comment => { %> 
                            <div> <img src="<%= comment.createdBy.profileImageURL %>" width="50px" alt="">
                                <%= comment.createdBy.fullName %><pre><%= comment.content %></pre>
                           <% }) %>
                        </div>
                  </form>
                  
                  </div>
            <% } %>
      </div>
    <%- include("./partials/scripts") %>
</body>
</html>